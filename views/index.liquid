<div class="container">
  <div class="list-group" style="font-size: 12px;">
    {% for row in rows %}{% strip %}
    <div class="list-group-item program {{row.classes}}">
      <div class="row">
        <div class="col-xs-4 col-sm-1">{{row.res.starttime | date:"%m/%d %a %H:%M"}}</div>
        <div class="col-xs-8 col-sm-1">[{{row.res.type}}] {{row.res.name}}</div>
        <div class="clearfix visible-xs-block hidden-sm hidden-md hidden-lg"></div>
        <h4 class="col-xs-12 col-sm-6 list-group-item-heading"><small>{% for cap in row.captions %}<span class="{{cap.class}}" title="{{cap.caption}}" aria-hidden="true"></span>{% endfor %}</small> {{row.matched}}{%unless row.filtered or row.reserved %} <button type="button" class="add-ignore-keyword btn btn-default btn-xs" data-toggle="modal" data-target="#add-keyword" data-add-keyword="{{row.matched}}"><span class="glyphicon glyphicon-remove"></span></button>{% endunless %}</h4>
        <div class="col-xs-12 col-sm-4">{{row.res.description}}</div>
      </div>
    </div>
{% endstrip %}{% endfor %}    
  </div>
</div>

<div class="modal" id="add-keyword" tabindex="-1" role="dialog" aria-labelledby="add-keyword-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form role="form" action="{{baseuri}}/add-ignore-keyword">
	<div class="modal-header">
	  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	  <h4 class="modal-title" id="add-keyword-label">キーワードを追加</h4>
	</div>
	<div class="modal-body">
	  <div class="form-group">
	    <label for="keyword">無視キーワード</label>
	    <input type="text" class="form-control" id="keyword">
	  </div>
	</div>
	<div class="modal-footer">
          <button type="submit" class="btn btn-primary">追加</button>
	</div>
      </form>
    </div>
  </div>
</div>
